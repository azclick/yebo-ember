<div class="container">
  <div class="row">
    <div class="small-12 medium-6 large-4 medium-offset-3 large-offset-4 columns">
      <form {{action 'submit' on='submit'}}>
        <fieldset>
          <legend>Resetar Senha</legend>

          {{#if resetRequested}}
            <div class="message-box">
              The instructions to reset your password were sent to your email.
              <br />
              {{link-to 'Back to store' 'yebo.index'}}
            </div>
          {{else}}
            {{yebo-input value=identification
                         errors=errors
                         attributeName="Email"
                         placeholder="Email"}}

            <button type="submit" class="expand">Send instructions</button>
          {{/if}}
        </fieldset>
      </form>
    </div>
  </div>
</div>